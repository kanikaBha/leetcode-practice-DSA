class Solution {
    public int reverse(int x) {
       
       String val=Integer.toString(x);
       String num="";
       String min="";
       boolean neg=false;

       for(int i=0;i<val.length();i++){
        if(val.charAt(i)=='-'){
            min="-";
            neg=true;
            continue;
        }
        else{
            num=val.charAt(i)+num;
        }
        }

        if(neg==true){
            num=min+num;
        }

       

        try{

        return Integer.parseInt(num);
        }
        catch(Exception e){
            return 0;
        }
        
       }
}















       
       
       
       
   
